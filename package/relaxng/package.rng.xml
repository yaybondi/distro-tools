<grammar xmlns="http://relaxng.org/ns/structure/1.0">

    <start>
        <element name="control">
            <optional>
                <ref name="defines"/>
            </optional>

            <ref name="source"/>

            <zeroOrMore>
                <ref name="package"/>
            </zeroOrMore>

            <ref name="changelog"/>
        </element>
    </start>

    <!-- DEFINES -->
    <define name="defines">
        <element name="defines">
            <zeroOrMore>
                <element name="def">
                    <attribute name="name"/>
                    <attribute name="value"/>
                </element>
            </zeroOrMore>
        </element>
    </define>

    <!-- SOURCE -->
    <define name="source">
        <element name="source">
            <attribute name="name"/>
            <attribute name="repo"/>

            <optional>
                <attribute name="build-for"/>
            </optional>
            <optional>
                <attribute name="supported-on"/>
            </optional>
            <optional>
                <attribute name="architecture-independent">
                    <choice>
                        <value>true</value>
                        <value>false</value>
                    </choice>
                </attribute>
            </optional>

            <!-- DESCRIPTION -->
            <ref name="description"/>

            <!-- COPYRIGHT -->
            <optional>
                <ref name="copyright"/>
            </optional>

            <interleave>
                <!-- REQUIRES -->
                <optional>
                    <element name="requires">
                        <interleave>
                            <zeroOrMore>
                                <ref name="dependency"/>
                            </zeroOrMore>
                            <zeroOrMore>
                                <element name="choice">
                                    <oneOrMore>
                                        <ref name="dependency"/>
                                    </oneOrMore>
                                </element>
                            </zeroOrMore>
                        </interleave>
                    </element>
                </optional>

                <!-- SOURCES -->
                <optional>
                    <element name="sources">
                        <zeroOrMore>
                            <element name="file">
                                <attribute name="src"/>
                                <optional>
                                    <attribute name="subdir"/>
                                </optional>
                                <optional>
                                    <attribute name="sha256sum"/>
                                </optional>
                            </element>
                        </zeroOrMore>
                    </element>
                </optional>

                <!-- PATCHES -->
                <optional>
                    <element name="patches">
                        <zeroOrMore>
                            <element name="patchset">
                                <optional>
                                    <attribute name="subdir"/>
                                </optional>
                                <optional>
                                    <attribute name="strip"/>
                                </optional>

                                <zeroOrMore>
                                    <element name="file">
                                        <attribute name="src"/>
                                        <optional>
                                            <attribute name="subdir"/>
                                        </optional>
                                        <optional>
                                            <attribute name="strip"/>
                                        </optional>
                                    </element>
                                </zeroOrMore>
                            </element>
                        </zeroOrMore>
                    </element>
                </optional>

                <!-- RULES -->
                <ref name="rules"/>
            </interleave>
        </element>
    </define>

    <!-- DESCRIPTION -->
    <define name="description">
        <element name="description">
            <element name="summary">
                <text/>
            </element>
            <interleave>
                <zeroOrMore>
                    <element name="p">
                        <ref name="text-inline"/>
                    </element>
                </zeroOrMore>
                <zeroOrMore>
                    <element name="ul">
                        <oneOrMore>
                            <element name="li">
                                <ref name="text-inline"/>
                            </element>
                        </oneOrMore>
                    </element>
                </zeroOrMore>
            </interleave>
        </element>
    </define>

    <!-- COPYRIGHT -->
    <define name="copyright">
        <element name="copyright">
            <oneOrMore>
                <element name="files">
                    <attribute name="license"/>
                    <oneOrMore>
                        <element name="file">
                            <attribute name="src"/>
                        </element>
                    </oneOrMore>
                    <optional>
                        <element name="copyright-notice">
                            <text/>
                        </element>
                    </optional>
                    <optional>
                        <element name="license">
                            <text/>
                        </element>
                    </optional>
                </element>
            </oneOrMore>

            <zeroOrMore>
                <element name="license">
                    <attribute name="handle"/>
                    <text/>
                </element>
            </zeroOrMore>
        </element>
    </define>

    <!-- DEPENDENCY -->
    <define name="dependency">
        <element name="package">
            <attribute name="name"/>
            <optional>
                <attribute name="version"/>
            </optional>
            <optional>
                <attribute name="target-prefix"/>
            </optional>
            <optional>
                <attribute name="tools-prefix"/>
            </optional>
            <optional>
                <attribute name="cross-tools-prefix"/>
            </optional>
        </element>
    </define>

    <!-- RULES -->
    <define name="rules">
        <element name="rules">
            <interleave>
                <optional>
                    <element name="prepare">
                        <text/>
                    </element>
                </optional>
                <optional>
                    <element name="build">
                        <text/>
                    </element>
                </optional>
                <optional>
                    <element name="install">
                        <text/>
                    </element>
                </optional>
            </interleave>
        </element>
    </define>

    <!-- PACKAGE -->
    <define name="package">
        <element name="package">
            <attribute name="name"/>
            <optional>
                <attribute name="section"/>
            </optional>
            <optional>
                <attribute name="build-for"/>
            </optional>
            <optional>
                <attribute name="supported-on"/>
            </optional>
            <optional>
                <attribute name="xml:base"/>
            </optional>

            <!-- DESCRIPTION -->
            <ref name="description"/>

            <interleave>
                <!-- REQUIRES -->
                <optional>
                    <element name="requires">
                        <interleave>
                            <zeroOrMore>
                                <ref name="dependency"/>
                            </zeroOrMore>
                            <zeroOrMore>
                                <element name="choice">
                                    <oneOrMore>
                                        <ref name="dependency"/>
                                    </oneOrMore>
                                </element>
                            </zeroOrMore>
                        </interleave>
                    </element>
                </optional>

                <!-- PROVIDES -->
                <optional>
                    <element name="provides">
                        <zeroOrMore>
                            <ref name="dependency"/>
                        </zeroOrMore>
                    </element>
                </optional>

                <!-- CONFLICTS -->
                <optional>
                    <element name="conflicts">
                        <zeroOrMore>
                            <ref name="dependency"/>
                        </zeroOrMore>
                    </element>
                </optional>

                <!-- REPLACES -->
                <optional>
                    <element name="replaces">
                        <zeroOrMore>
                            <ref name="dependency"/>
                        </zeroOrMore>
                    </element>
                </optional>

                <!-- CONTENTS -->
                <optional>
                    <element name="contents">
                        <optional>
                            <attribute name="subdir"/>
                        </optional>
                        <optional>
                            <attribute name="collect-py-cache-files">
                                <choice>
                                    <value>true</value>
                                    <value>false</value>
                                </choice>
                            </attribute>
                        </optional>

                        <interleave>
                            <zeroOrMore>
                                <element name="dir">
                                    <attribute name="src"/>
                                    <optional>
                                        <attribute name="owner"/>
                                    </optional>
                                    <optional>
                                        <attribute name="group"/>
                                    </optional>
                                    <optional>
                                        <attribute name="mode"/>
                                    </optional>
                                </element>
                            </zeroOrMore>

                            <zeroOrMore>
                                <element name="file">
                                    <attribute name="src"/>
                                    <optional>
                                        <attribute name="owner"/>
                                    </optional>
                                    <optional>
                                        <attribute name="group"/>
                                    </optional>
                                    <optional>
                                        <attribute name="mode"/>
                                    </optional>
                                    <optional>
                                        <attribute name="conffile"/>
                                    </optional>
                                </element>
                            </zeroOrMore>
                        </interleave>
                    </element>
                </optional>

                <!-- MAINTAINER SCRIPTS -->
                <optional>
                    <element name="maintainer-scripts">
                        <interleave>
                            <optional>
                                <element name="preinst">
                                    <text/>
                                </element>
                            </optional>
                            <optional>
                                <element name="postinst">
                                    <text/>
                                </element>
                            </optional>
                            <optional>
                                <element name="prerm">
                                    <text/>
                                </element>
                            </optional>
                            <optional>
                                <element name="postrm">
                                    <text/>
                                </element>
                            </optional>
                        </interleave>
                    </element>
                </optional>

            </interleave>
        </element>
    </define>

    <!-- CHANGELOG -->
    <define name="changelog">
        <element name="changelog">
            <oneOrMore>
                <element name="release">
                    <optional>
                        <attribute name="epoch"/>
                    </optional>
                    <attribute name="version"/>
                    <attribute name="revision"/>
                    <optional>
                        <attribute name="upstream-version"/>
                    </optional>
                    <attribute name="maintainer"/>
                    <attribute name="email"/>
                    <attribute name="date"/>
                    <oneOrMore>
                        <element name="changeset">
                            <optional>
                                <attribute name="contributor"/>
                            </optional>
                            <oneOrMore>
                                <element name="li">
                                    <ref name="text-inline"/>
                                </element>
                            </oneOrMore>
                        </element>
                    </oneOrMore>
                </element>
            </oneOrMore>
        </element>
    </define>

    <!-- TEXT AND INLINE ELEMENTS -->
    <define name="text-inline">
        <interleave>
            <text/>
            <optional>
                <element name="em">
                    <text/>
                </element>
            </optional>
        </interleave>
    </define>

</grammar>
